<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="kingdom" _name="Kingdom" version="1.0">
  <author>Cleiton Francisco</author>
  <_description>Color scheme Kingdom</_description>

<!-- Colors -->

  <color name="black" value="#000000"/> 						<!-- Fundo -->
  <color name="white" value="#ffffff"/> 						<!-- Texto normal -->
  <color name="yellow" value="#ffff00"/> 						<!-- Simbolos -->
  <color name="light_yellow" value="#ffff66"/> 			<!-- Keywords Rails -->
  <color name="orange" value="#ff8000"/> 						<!-- Keywords Ruby -->
  <color name="green" value="#00ff00"/> 						<!-- Apostrofes -->
  <color name="light_green" value="#66ff66"/> 			<!-- Strings -->
  <color name="medium_green" value="#dae335"/> 			<!-- Include, etc -->
  <color name="blue" value="#0c23ff"/> 							<!-- URLs -->
  <color name="light_blue" value="#339996"/> 				<!-- Booleanos -->
  <color name="cyan" value="#00ffff"/> 						  <!-- Constantes e variaveis iniciadas com letra maiuscula -->
  <color name="light_cyan" value="#95cc99"/> 			  <!-- Atributos HTML -->
  <color name="dark_blue" value="#2c82cc"/> 			  <!-- Numeros -->
  <color name="purple" value="#d6533a"/> 						<!-- Erros -->
  <color name="gray" value="#999999"/> 						  <!-- Comentarios -->
  <color name="dark_gray" value="#555555"/> 			  <!-- Numeros das linha -->
  <color name="asfalto" value="#555753"/>           <!-- Selecao -->
  <color name="carbon" value="#232323"/>
  <color name="ultra_light_blue" value="#67e4ff"/> 	<!-- Tags HTML -->

<!--GUI styles-->

  <style name="text"                    foreground="white" background="black"/>
  <style name="selection"               background="asfalto"/>
  <style name="selection-unfocused"     foreground="white" background="gray"/>
  <style name="cursor"                  foreground="white"/>
  <style name="secondary-cursor"        foreground="white"/>
  <style name="line-numbers"            foreground="#191919" background="dark_gray"/>
  <style name="current-line"            background="#232826"/>
  <style name="search-match"            foreground="#242424" background="#fce94f"/>
	<style name="bracket-match"           foreground="#eeeeec" background="#babdb6" bold="true"/>
  <style name="bracket-mismatch"        foreground="#eeeeec" background="#a40000" bold="true"/>

  <!-- CUSTOM -->

  <style name="def:symbol" 							foreground="yellow"/>
  <style name="def:comment"  						foreground="gray" italic="true"/>
  <style name="def:string"   						foreground="light_green"/>
  <style name="def:keyword"  						foreground="orange" bold="true"/> 
  <style name="def:global-variable" 		foreground="cyan"/>
  <style name="def:class-variable" 			foreground="cyan"/>
  <style name="def:instance-variable" 	foreground="cyan"/>
  <style name="def:identifier" 					foreground="ultra_light_blue" bold="false"/>
  <style name="def:type"               	foreground="light_cyan"/>
 
  <style name="ruby:rails" 							foreground="light_yellow"/>
  <style name="rhtml:rails" 						foreground="light_yellow"/>

  <style name="def:block" 						  background="#191919"/>

  <!-- END CUSTOM -->

  <style name="def:statement"               foreground="white"/>
  <style name="def:function"                foreground="white"/>
  <style name="def:preprocessor"            foreground="white" bold="true"/>
  <style name="def:character"               foreground="green"/>
  <style name="def:number"                  foreground="dark_blue"/>
  <style name="def:decimal"									use-style="def:number"/>
  <style name="def:base-n-integer"          use-style="def:number"/>
  <style name="def:floating-point"					use-style="def:number"/>
  <style name="def:complex"                 foreground="green"/>
  <style name="def:net-address-in-comment"  foreground="blue" italic="true" underline="true"/>
  <style name="def:note"                    foreground="white" background="white" bold="true"/>
  <style name="def:error"                   background="purple" bold="true"/>
  <style name="def:escape"                  foreground="#72c654"/>
  <style name="def:shebang"                 foreground="white" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>
  <style name="def:builtin"									foreground="medium_green" bold="true"/>
  <style name="def:specials"                foreground="white" background="white"/>
  <style name="def:boolean"                 foreground="light_blue" bold="true"/>
  <style name="def:constant"                foreground="white"/>
  <style name="def:special-constant"        foreground="white" bold="true"/>
  <style name="def:special-character"       foreground="white" bold="true"/>
  <style name="diff:added-line"             foreground="white"/>
  <style name="diff:removed-line"           foreground="white"/>
  <style name="diff:changed-line"           foreground="white"/>
  <style name="diff:location"               use-style="def:keyword"/>
  <style name="diff:special-case"           use-style="def:string"/>
                
</style-scheme>
