<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="Dojopi" _name="Dojopi" version="1.0">
  <author>Cleiton Francisco</author>
  <_description>Color scheme Dojopi</_description>

<!--GUI styles-->

  <style name="text"                    foreground="#000000" background="#eff6f7"/>
  <style name="selection"               foreground="#080808" background="#b9cafa"/>
  <style name="selection-unfocused"     foreground="#383838" background="#eff6f7"/>
  <style name="cursor"                  foreground="#000080"/>
  <style name="secondary-cursor"        foreground="#000000"/>
  <style name="line-numbers"            foreground="#798aba" background="#dfe6f0"/>
  <style name="current-line"            background="#cfd6d7"/>
  <style name="search-match"            foreground="#242424" background="#fce94f"/>
	<style name="bracket-match"           foreground="#eeeeec" background="#babdb6" bold="true"/>
  <style name="bracket-mismatch"        foreground="#eeeeec" background="#a40000" bold="true"/>

  <!-- CUSTOM -->

  <style name="def:symbol" 							foreground="#ffff00"/>
  <style name="def:comment"  						foreground="#665665" italic="true"/>
  <style name="def:string"   						foreground="#008000"/>
  <style name="def:keyword"  						foreground="#106663" bold="true"/> 
  <style name="def:global-variable" 		foreground="#cc0000"/>
  <style name="def:class-variable" 			foreground="#cc0000"/>
  <style name="def:instance-variable" 	foreground="#cc0000"/>
  <style name="def:identifier" 					foreground="#0e0e6f" bold="false"/>
  <style name="def:type"               	foreground="#30306b"/>
 
  <style name="ruby:rails" 							foreground="#811f24"/>
  <style name="ruby:symbol"             foreground="#811f24" bold="true"/>
  <style name="ruby:builtin"            foreground="#25176a" bold="true"/>
  <style name="rhtml:rails" 						foreground="#509588"/>
  <style name="rubyonrails:symbol"      foreground="#811f24" bold="true"/>

  <style name="def:block" 						  background="#191919"/>

  <!-- END CUSTOM -->

  <style name="def:statement"               foreground="#000000"/>
  <style name="def:function"                foreground="#000000"/>
  <style name="def:preprocessor"            foreground="#000000" bold="true"/>
  <style name="def:character"               foreground="#008000"/>
  <style name="def:number"                  foreground="#990011"/>
  <style name="def:decimal"									use-style="def:number"/>
  <style name="def:base-n-integer"          use-style="def:number"/>
  <style name="def:floating-point"					use-style="def:number"/>
  <style name="def:complex"                 foreground="#008000"/>
  <style name="def:net-address-in-comment"  foreground="#0c23ff" italic="true" underline="true"/>
  <style name="def:note"                    foreground="#080808" background="#b9cafa" bold="true"/>
  <style name="def:error"                   background="#d6533a" bold="true"/>
  <style name="def:escape"                  foreground="#72c654"/>
  <style name="def:shebang"                 foreground="#000000" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>
  <style name="def:builtin"									foreground="#25176a" bold="true"/>
  <style name="def:specials"                foreground="#080808" background="#b9cafa"/>
  <style name="def:boolean"                 foreground="#2c82cc" bold="true"/>
  <style name="def:constant"                foreground="#000000"/>
  <style name="def:special-constant"        foreground="#000000" bold="true"/>
  <style name="def:special-character"       foreground="#000000" bold="true"/>
  <style name="diff:added-line"             foreground="#000000"/>
  <style name="diff:removed-line"           foreground="#000000"/>
  <style name="diff:changed-line"           foreground="#000000"/>
  <style name="diff:location"               use-style="def:keyword"/>
  <style name="diff:special-case"           use-style="def:string"/>
                
</style-scheme>
